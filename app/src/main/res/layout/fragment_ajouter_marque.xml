<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.itomorrow.mesfeutresalcool.fragments.AjouterMarqueFragment"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords|textPersonName"
        android:ems="10"
        android:id="@+id/fragment_ajouter_marque_marque_edittext"
        android:hint="Marque ..."
        android:layout_weight="1" />

    <Button
        android:text="Ajouter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_ajouter_marque_ajouter_button"
        android:layout_marginBottom="5dp" />

    <Button
        android:text="Annuler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_ajouter_marque_annuler_button" />
</LinearLayout>
